<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollViewLunch">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Dosa"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/dosa" />

            <ImageView
                android:id="@+id/garlicbread"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/bread" />

            <ImageView
                android:id="@+id/Burrito"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/burrito" />

            <ImageView
                android:id="@+id/pizza"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/pizza" />

            <ImageView
                android:id="@+id/eggrice"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/eggrice" />

            <ImageView
                android:id="@+id/lemonrice"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/lemonrice" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/curdrice" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>